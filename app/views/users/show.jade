extends ../shared/template
block content
  .row
    .col-xs-8
      h3 Profile
      #table
        table.table.table-striped.table-hover.table-bordered
          thead
            tr
              th Email
              th Tagline
              th Facebook
              th Twitter
              th Phone
              th Visibility
          tbody
            tr
              td= user.email
              td= user.tagline
              td= user.facebook
              td= user.twitter
              td= user.phone
              td
                if user.isVisible
                  span Public
                else
                  span Private
      button.btn.btn-primary#edit: a(href='/profile/edit') Edit Profile
    .col-xs-2
      #photo 
        img(src= user.photo)
    .col-xs-2
